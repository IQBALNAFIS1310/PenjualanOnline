@model List<PenjualanOnline.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    // Layout = null;
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@product.PhotoUrl" class="card-img-top" alt="@product.Name" onerror="this.src='/images/noimage.png';" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>Harga:</strong> @product.Price.ToString("C")</p>
                    <p class="card-text"><strong>Stok:</strong> @product.Stock</p>
                    <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-info">Detail</a>
                </div>
            </div>
        </div>
    }
</div>