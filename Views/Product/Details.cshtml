@model PenjualanOnline.Models.Product
@{
    ViewData["Title"] = "Detail Produk";
}

<h2>Detail Produk</h2>

<dl class="row">
    <dt class="col-sm-2">Nama</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Deskripsi</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Harga</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Stok</dt>
    <dd class="col-sm-10">@Model.Stock</dd>

    <dt class="col-sm-2">Foto</dt>
    <dd class="col-sm-10">
        <img src="@Model.PhotoUrl" alt="@Model.Name" style="max-height:200px;" />
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Kembali</a>
