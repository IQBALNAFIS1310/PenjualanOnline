@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PenjualanOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PenjualanOnline.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    🛒 PenjualanOnline
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.IsInRole("seller"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Product" asp-action="Index">Produk</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">Keranjang</a>
                            </li>

                        }

                    </ul>
                    <ul class="navbar-nav">
                        @{
                            var user = Context.User;
                            if (user?.Identity?.IsAuthenticated ?? false)
                            {
                                var email = user.FindFirst(ClaimTypes.Name)?.Value ?? "User";
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                        @email
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Profil</a></li>
                                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="btn btn-light text-primary me-2" asp-controller="Auth" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-outline-light" asp-controller="Auth" asp-action="Register">Daftar</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5>PenjualanOnline</h5>
                    <p>Belanja mudah, cepat, dan aman. Temukan berbagai produk terbaik di sini!</p>
                </div>
                <div class="col-md-3">
                    <h6>Menu</h6>
                    <ul class="list-unstyled">
                        <li><a class="text-white text-decoration-none" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="text-white text-decoration-none" asp-controller="Products" asp-action="Index">Produk</a></li>
                        <li><a class="text-white text-decoration-none" asp-controller="Cart" asp-action="Index">Keranjang</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Kontak</h6>
                    <p>Email: support@penjualanonline.com</p>
                    <p>Telp: +62 812 3456 7890</p>
                </div>
            </div>
            <hr class="bg-light" />
            <div class="text-center">
                &copy; @DateTime.Now.Year - PenjualanOnline
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
